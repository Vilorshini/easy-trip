<%= render 'banner' %>
<div class='container'>
  <h2 class="my-4">All Categories</h2>

  <div class='row d-flex justify-content-between align-items-center cat-wrapper'>
    <% @categories.each do |category| %>
      <div class="col-12 cat-item">
        <%= link_to category_path(category), class: 'text-decoration-none' do %>
          <div class="card-category mb-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path category.photo.key, height: 300, crop: :fill %>')">
            <%= category.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

</div>

<div class='container py-4'>

  <div class="show-card">
    <h3 class="">Not sure which activity to pick?</h3>
    <%= link_to "Learn more", about_path, class: 'btn btn-flat my-3'  %>
  </div>
</div>

<div class="container mt-3 marg-bot">
      <div class="row">

          <div class="col-sm-12">
            <h2>Reviews</h2>
            <% @reviews.each do |review| %>
                <div class="notification">
                <% if review.user.photo.attached? %>
                 <%= cl_image_tag review.user.photo.key, class: "avatar-large" %>
                 <%end %>

                    <div class="notification-content">
                        <p>
                        <% if review.rating %>
                            <small>Rating: <% review.rating.times do %>
                                <i class="fas fa-star"></i>
                            <% end %>
                            </small>
                        <% end %>
                        </p>
                        <p><%= review.comment %></p>
                    </div>

                    <div class="notification-actions">
                        <a href="#">Delete <i class="far fa-trash-alt"></i></a>
                    </div>
                    <hr>
                </div>
            <% end %>
          </div>

          <div class="review-card col-sm-12 my-4">
            <h3>Add a review</h3>
            <%= render "form-reviews" %>
          </div>

      </div>
</div>
